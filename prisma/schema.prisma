generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey{
  id Int @id @default(autoincrement()) 
  name String
  question Question[]
}

model Question{
  id Int @id @default(autoincrement())
  surveyId Int
  code String @unique
  title String
  description String
  type String
  required Boolean @default(true)
  options String[]
  survey Survey @relation(fields: [surveyId], references: [id])
  answers Answer[]
}

model User{
  id Int @id @default(autoincrement())
  email String @unique
  password String
  answers Answer[]
}

model Answer{
  id Int @id @default(autoincrement())
  userId Int
  questionId Int
  response String
  user User @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([userId, questionId])
}